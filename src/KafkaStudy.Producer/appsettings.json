{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "broker:29092",
    "SchemaRegistryUrl": "http://schema-registry:8081",
    "Acks": "All",
    "EnableIdempotence": "true",
    "MessageSendMaxRetries": "10000",
    "MaxInFlight": "5",
    "CompressionType": "Snappy",
    "LingerMs": "10",
    "BatchSizeKB": "10"
  }
}